<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Location is needed to show the sky map and satellite passes.</string>
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Location is needed for real-time satellite tracking and sky map.</string>
    <key>NSCameraUsageDescription</key>
    <string>Camera permission is required for AR sky and observation recording.</string>
    <key>NSMotionUsageDescription</key>
    <string>Motion sensors are used to align the sky map accurately.</string>
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>Bluetooth is required for telescope and DSLR connections.</string>
    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Bluetooth permission is required for telescope connections.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Photo library access is required to save captured images and videos.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>Permission is required to add captured images and videos to Photos.</string>
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
        <string>fetch</string>
        <string>bluetooth-central</string>
        <string>bluetooth-peripheral</string>
</array>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arkit</string>
        <string>metal</string>
    </array>
    <key>NSLocalNetworkUsageDescription</key>
    <string>Local network access is required to use AirPlay.</string>
    <key>NSBonjourServices</key>
    <array>
        <string>_airplay._tcp</string>
    </array>
    <key>NASA_API_KEY</key>
    <string>$(NASA_API_KEY)</string>
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsLocalNetworking</key>
        <true/>
        <key>NSExceptionDomains</key>
        <dict>
            <key>api.open-notify.org</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <false/>
            </dict>
            <key>open-notify.org</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <false/>
            </dict>
            <key>192.168.1.6</key>
            <dict>
                <key>NSIncludesSubdomains</key>
                <true/>
                <key>NSExceptionAllowsInsecureHTTPLoads</key>
                <true/>
                <key>NSExceptionRequiresForwardSecrecy</key>
                <false/>
            </dict>
        </dict>
    </dict>
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>
</dict>
</plist>
